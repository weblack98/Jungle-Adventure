const reel1 = document.getElementById('reel1');
const reel2 = document.getElementById('reel2');
const reel3 = document.getElementById('reel3');
const spinBtn = document.getElementById('spin');

const fichas = ['🍒', '🍋', '🍊', '🔔', '⭐', '💎'];

function getRandomFicha() {
  return fichas[Math.floor(Math.random() * fichas.length)];
}

function spin() {
  // Animación rápida de giro antes de mostrar resultado
  let count = 0;
  const maxCount = 20;

  const interval = setInterval(() => {
    reel1.textContent = getRandomFicha();
    reel2.textContent = getRandomFicha();
    reel3.textContent = getRandomFicha();
    count++;
    if (count > maxCount) {
      clearInterval(interval);
      // Resultado final
      reel1.textContent = getRandomFicha();
      reel2.textContent = getRandomFicha();
      reel3.textContent = getRandomFicha();
    }
  }, 100);
}

spinBtn.addEventListener('click', spin);
